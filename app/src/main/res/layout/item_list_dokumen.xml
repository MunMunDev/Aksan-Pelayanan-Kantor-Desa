<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp">
        <ImageView
            android:id="@+id/ivDokumen"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icon_dokumen"/>
        <TextView
            android:id="@+id/tvDokumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivDokumen"
            android:layout_marginTop="8dp"
            android:text="Nama Dokumen "
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:maxLines="2"
            android:lineSpacingExtra="2dp"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/btnUploadDokumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvDokumen"
            android:layout_marginTop="8dp"
            android:text="@string/upload_dokumen"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/textColorBlack"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_card"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvTitleStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnUploadDokumen"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:text="Status : "
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:maxLines="1"
            android:lineSpacingExtra="2dp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnUploadDokumen"
            app:layout_constraintStart_toEndOf="@id/tvTitleStatus"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:text="Status"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:lineSpacingExtra="2dp"
            android:ellipsize="end"/>

        <LinearLayout
            android:id="@+id/llPesanDesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvStatus"
            android:layout_marginTop="12dp"
            android:layout_marginStart="4dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesan Desa "
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:lineSpacingExtra="2dp"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tvPesanDesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Pesan Desa"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:maxLines="4"
                android:lineSpacingExtra="2dp"
                android:ellipsize="end"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>